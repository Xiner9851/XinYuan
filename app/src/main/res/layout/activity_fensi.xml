<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="26dp"
        android:layout_height="44dp">

        <TextView
            android:id="@+id/masterguanzhulist_aty_title_cancle"
            android:layout_width="wrap_content"
            android:drawableLeft="@mipmap/u1253"
            android:layout_height="match_parent" />


        <TextView
            android:id="@+id/masterguanzhulist_aty_title_tv"
            android:layout_width="wrap_content"
            android:textColor="#2a349c"
            android:textSize="18sp"
            android:text="粉丝"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="1dp" />

    <ListView
        android:id="@+id/masterguanzhulist_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/masterguanzhulist_recyclerview_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="145dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="80dp"
                android:src="@mipmap/empty_content"
                android:layout_height="77dp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="暂无内容"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>



</LinearLayout>