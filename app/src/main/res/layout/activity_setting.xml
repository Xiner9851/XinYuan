<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_marginTop="26dp"
        android:layout_height="44dp">

        <TextView
            android:id="@+id/setting_aty_cancle"
            android:layout_width="wrap_content"
            android:drawableLeft="@mipmap/u1253"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:text="设置"
            android:textSize="18sp"
            android:textColor="#407ccb"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <TextView
        android:layout_width="match_parent"
        android:background="#F6F6F6"
        android:layout_height="10dp" />


    <RelativeLayout
        android:id="@+id/setting_aty_changephone_group"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_height="48dp">


        <TextView
            android:layout_width="wrap_content"
            android:text="换绑手机"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/setting_aty_phone_tv"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:layout_height="wrap_content" />


            <ImageView
                android:layout_width="7dp"
                android:src="@mipmap/home_myself_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_height="12dp" />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:id="@+id/setting_aty_bind_group"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_height="48dp">


        <TextView
            android:layout_width="wrap_content"
            android:text="社交账号绑定"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:text="绑定/解绑"
                android:textColor="@color/gray"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:layout_height="wrap_content" />


            <ImageView
                android:layout_width="7dp"
                android:src="@mipmap/home_myself_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_height="12dp" />

        </LinearLayout>
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:id="@+id/setting_aty_pass_group"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_height="48dp">


        <TextView
            android:layout_width="wrap_content"
            android:text="登录密码"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/gray"
                android:text="修改"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:layout_height="wrap_content" />


            <ImageView
                android:layout_width="7dp"
                android:src="@mipmap/home_myself_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_height="12dp" />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="#F6F6F6"
        android:layout_height="10dp" />

    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_height="48dp">


        <TextView
            android:layout_width="wrap_content"
            android:text="清空缓存"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/setting_glide_cahce_tv"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:layout_height="wrap_content" />


            <ImageView
                android:layout_width="7dp"
                android:src="@mipmap/home_myself_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_height="12dp" />

        </LinearLayout>
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:background="#F6F6F6"
        android:layout_height="10dp" />

    <RelativeLayout
        android:id="@+id/setting_aty_about_group"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_height="48dp">


        <TextView
            android:layout_width="wrap_content"
            android:text="关于UnivStar"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="7dp"
                android:src="@mipmap/home_myself_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_height="12dp" />

        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/setting_aty_tuichu_group"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_height="48dp">


        <TextView
            android:layout_width="wrap_content"
            android:text="退出登录"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="7dp"
                android:src="@mipmap/home_myself_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_height="12dp" />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="#F6F6F6"
        android:layout_height="match_parent" />


</LinearLayout>