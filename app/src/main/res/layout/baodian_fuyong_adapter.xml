<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="12dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/home_valuable_listitem_img"
                android:layout_width="40dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                android:layout_height="40dp" />

            <LinearLayout
                android:id="@+id/xianqing"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:weightSum="1">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginRight="12dp"

                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/home_valuable_listitem_name"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:text="fasfas"
                        android:layout_width="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true" />
                    <TextView
                        android:id="@+id/home_valuable_listitem_time"
                        android:textSize="14dp"
                        android:text="sfafsa"
                        android:layout_below="@+id/home_valuable_listitem_name"
                        android:layout_width="wrap_content"
                        android:textColor="#999999"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.46" />

                    <TextView
                        android:id="@+id/home_valuable_listitem_contenttype"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:background="@drawable/valuable_listitem_type_bg"
                        android:layout_centerVertical="true"
                        android:textColor="#5072c8"
                        android:paddingLeft="10dp"
                        android:text="asfafa"
                        android:paddingRight="10dp"
                        android:gravity="center"
                        android:layout_below="@+id/home_valuable_listitem_name"
                        android:textSize="12sp"
                        android:layout_height="24dp" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="12dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/home_valuable_listitem_title"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:textColor="#000000"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/home_valuable_listitem_content"
                        android:layout_width="wrap_content"
                        android:maxLines="2"
                        android:textSize="14sp"
                        android:ellipsize="end"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/home_valuable_listitem_contentimg_group"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/home_valuable_listitem_contentimg"
                        android:layout_width="wrap_content"
                        android:maxWidth="236dp"
                        android:maxHeight="236dp"
                        android:scaleType="fitStart"
                        android:adjustViewBounds="true"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/home_valuable_listitem_audioimg"
                        android:layout_width="236dp"
                        android:src="@mipmap/play_music_bg"
                        android:visibility="gone"
                        android:layout_height="132dp" />


                    <RelativeLayout
                        android:id="@+id/home_valuable_listitem_audio_gorpu"
                        android:layout_width="wrap_content"
                        android:visibility="gone"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/home_valuable_listitem_audio_time"
                            android:layout_width="wrap_content"
                            android:textColor="#ffffff"
                            android:textSize="12dp"
                            android:layout_marginTop="72dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="33dp"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/home_valuable_listitem_video_gorpu"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="38dp"
                            android:src="@mipmap/play"
                            android:layout_height="38dp" />

                        <TextView
                            android:id="@+id/home_valuable_listitem_video_time"
                            android:layout_marginTop="10dp"
                            android:textSize="14dp"
                            android:textColor="#ffffff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="16dp"
                        android:src="@mipmap/label_flag"
                        android:layout_height="16dp" />

                    <TextView
                        android:id="@+id/home_valuable_listitem_worktype"
                        android:textSize="14dp"
                        android:layout_marginLeft="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:background="#f6f6f6"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_height="1dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp">


            <LinearLayout
                android:id="@+id/home_valuable_list_item_collect_group"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/home_valuable_list_item_collect_cb"
                    android:layout_width="wrap_content"
                    android:button="@drawable/collect_check_bg"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:paddingLeft="8dp"
                    android:textColor="@drawable/praise_check_tv_bg"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_valuable_list_item_reply_group"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/home_valuable_list_item_reply_cb"
                    android:layout_width="wrap_content"
                    android:button="@drawable/reply_check_bg"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:paddingLeft="8dp"
                    android:textColor="@drawable/reply_check_tv_bg"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/home_valuable_list_item_praise_group"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/home_valuable_list_item_praise_cb"
                    android:layout_width="wrap_content"
                    android:button="@drawable/praise_check_bg"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:paddingLeft="8dp"
                    android:textColor="@drawable/praise_check_tv_bg"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/home_valuable_list_item_share"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/share_default" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#eeeeee"
            android:layout_height="10dp">

        </LinearLayout>

    </LinearLayout>
</LinearLayout>