<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">



    <LinearLayout
        android:id="@+id/aaa"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="26dp"
            android:layout_gravity="center_vertical"
            android:layout_height="44dp">

            <TextView
                android:id="@+id/complete_userinfo_aty_cancle"
                android:layout_width="wrap_content"
                android:drawableLeft="@mipmap/u1253"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                />


            <TextView
                android:id="@+id/tiaoguo"
                android:layout_width="32dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:text="跳过"/>
        </RelativeLayout>



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/bbb"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#1d2391"
                            android:textSize="18sp"
                            android:text="对哪个词最熟悉，最感兴趣？"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#2f2a83"
                            android:textSize="13sp"
                            android:id="@+id/bbbb"
                            android:layout_marginTop="4dp"
                            android:text="选择后，相关内容优先内容推荐给你"/>

                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/baocun"
        android:id="@+id/mRecy"
        android:layout_below="@+id/aaa"
        ></android.support.v7.widget.RecyclerView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="保存"
        android:id="@+id/baocun"
        android:layout_alignParentBottom="true"
        android:background="#1354cb"
        android:textColor="#ffffff"
        android:textSize="18sp"
        />

</RelativeLayout>