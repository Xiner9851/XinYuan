<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="26dp"
        android:layout_height="44dp">

        <TextView
            android:id="@+id/setting_aty_cancle"
            android:layout_width="wrap_content"
            android:drawableLeft="@mipmap/u1253"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
             />

        <TextView
            android:layout_width="wrap_content"
            android:text="社交账号绑定"
            android:textSize="18dp"
            android:textColor="#212b92"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TextView
        android:layout_width="match_parent"
        android:background="#F6F6F6"
        android:layout_height="10dp" />


    <RelativeLayout
        android:id="@+id/bindaccount_qq_group"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_height="48dp">


        <TextView
            android:id="@+id/bindaccount_qq_img"
            android:layout_width="28dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bind_qq_bg"
            android:layout_height="28dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/bindaccount_qq_tv"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:text="绑定"
                android:textColor="@drawable/bind_account_tv_bg"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18sp"
                android:layout_height="wrap_content" />


            <ImageView
                android:layout_width="7dp"
                android:src="@mipmap/home_myself_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_height="12dp" />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp" />


    <RelativeLayout
        android:id="@+id/bindaccount_sina_group"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_height="48dp">


        <TextView
            android:id="@+id/bindaccount_sina_img"
            android:layout_width="28dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bind_weibo_bg"
            android:layout_height="28dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/bindaccount_sina_tv"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:text="绑定"
                android:textColor="@drawable/bind_account_tv_bg"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:layout_height="wrap_content" />


            <ImageView
                android:layout_width="7dp"
                android:src="@mipmap/home_myself_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_height="12dp" />

        </LinearLayout>
    </RelativeLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp" />


    <RelativeLayout
        android:id="@+id/bindaccount_weixin_group"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_height="48dp">


        <TextView
            android:id="@+id/bindaccount_weixin_img"
            android:layout_width="28dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bind_weixin_bg"
            android:layout_height="28dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/bindaccount_weixin_tv"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:text="绑定"
                android:textColor="@drawable/bind_account_tv_bg"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:layout_height="wrap_content" />


            <ImageView
                android:layout_width="7dp"
                android:src="@mipmap/home_myself_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_height="12dp" />

        </LinearLayout>
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</LinearLayout>