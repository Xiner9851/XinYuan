<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="26dp"
        android:layout_height="44dp">

        <TextView
            android:id="@+id/about_aty_title_cancle"
            android:layout_width="wrap_content"
            android:drawableLeft="@mipmap/u1253"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:text="关于UnivStar"
            android:textSize="18dp"
            android:textColor="#211ee1"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="1dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="52dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="122dp"
            android:src="@mipmap/about_log"
            android:layout_gravity="center_vertical"
            android:layout_height="122dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="68dp"
        android:layout_alignParentBottom="true"
        android:layout_height="1dp" />

    <RelativeLayout
        android:id="@+id/about_aty_aboutintro_group"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_height="48dp">


        <TextView
            android:layout_width="wrap_content"
            android:text="UnivStar介绍"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="7dp"
                android:src="@mipmap/home_myself_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_height="12dp" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_alignParentBottom="true"
        android:layout_height="1dp" />

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_height="48dp">


        <TextView
            android:layout_width="wrap_content"
            android:text="新版本检测"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:textColor="#181dbd"
                android:layout_centerVertical="true"
                android:text="已是最新版本"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:layout_height="wrap_content" />


            <ImageView
                android:layout_width="7dp"
                android:src="@mipmap/home_myself_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_height="12dp" />

        </LinearLayout>
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="1dp" />

</LinearLayout>