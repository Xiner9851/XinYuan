<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfbfb"
    android:orientation="vertical"
    tools:context="com.example.administrator.xinyuan.view.me.GoToLoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关闭"
            android:layout_margin="10dp"
            android:id="@+id/guanbi"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:id="@+id/zhuce"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="请输入手机号"
            android:paddingLeft="10dp"
            android:layout_margin="12dp"
            android:background="@drawable/shape"
            android:id="@+id/tel" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/u1169"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_alignRight="@+id/tel"
            android:layout_alignEnd="@+id/tel" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="输入密码"
            android:paddingLeft="10dp"
            android:layout_margin="12dp"
            android:background="@drawable/shape"
            android:id="@+id/password" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/u1169"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_alignRight="@+id/password"
            android:layout_alignEnd="@+id/password" />

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码？"
        android:id="@+id/wangpsw"
        android:textColor="#000000"
        android:layout_marginLeft="12dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="登录"
        android:id="@+id/denglu"
        android:textColor="#ffffff"
        android:background="#3147b3"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="其他登录"
        android:textSize="19sp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textColor="#000000"
        />
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="3"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/weixin"
            android:src="@mipmap/weixin_login"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/qq"
            android:src="@mipmap/qq_login"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/xinlang"
            android:src="@mipmap/sinaweibo_login"
            />


    </LinearLayout>






</LinearLayout>
