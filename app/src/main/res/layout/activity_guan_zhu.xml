            android:layout_height="match_parent" />


        <TextView
            android:id="@+id/masterfudaolist_aty_title_tv"
            android:layout_width="wrap_content"
            android:textColor="#364fba"
            android:textSize="18sp"
            android:text="关注"
            android:layout_centerInParent="true"
