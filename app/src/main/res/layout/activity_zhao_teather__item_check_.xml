<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.xinyuan.view.teather.ZhaoTeather_ItemCheck_Activity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/again_NameTeacherHead"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/again_bigImg"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/again_img"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" />
                <RelativeLayout
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorTong"
                    android:id="@+id/again_teacher"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:id="@+id/again_teacherlabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"

                        android:textColor="@color/colorWhite"
                        android:textSize="10sp" />
                    <CheckBox
                        android:checked="false"
                        android:paddingLeft="8dp"
                        android:id="@+id/again_teacherzan"
                        android:text="6"
                        android:button="@drawable/again_zan"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="10sp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </RelativeLayout>






            <RelativeLayout
                android:id="@+id/again_Rela"
                android:layout_below="@+id/again_bigImg"
                android:layout_width="match_parent"
                android:layout_height="140dp">
                <RelativeLayout
                    android:id="@+id/again_NameTeacherHead1"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <ImageView
                        android:id="@+id/again_NameteacherHead_teacherImg"
                        android:layout_marginRight="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:id="@+id/again_NameteacherHead_teacherName"
                        android:layout_marginRight="3dp"
                        android:layout_alignTop="@+id/again_NameteacherHead_teacherImg"
                        android:layout_toRightOf="@+id/again_NameteacherHead_teacherImg"
                        android:textSize="16sp"
                        android:textColor="#e9dc26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/again_NameteacherHead_teacherVipImg"
                        android:layout_alignTop="@+id/again_NameteacherHead_teacherImg"
                        android:layout_toRightOf="@+id/again_NameteacherHead_teacherName"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:layout_toRightOf="@+id/again_NameteacherHead_teacherImg"
                        android:id="@+id/again_teacherHead_NameteacherTitle"
                        android:textSize="15sp"
                        android:layout_alignBottom="@+id/again_NameteacherHead_teacherImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/again_NameteacherHead_teacherConcern"
                        android:layout_marginRight="10dp"
                        android:text="关注"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/shape"
                        android:layout_width="60dp"
                        android:layout_height="30dp" />
                    <Button
                        android:visibility="gone"
                        android:id="@+id/quagain_NameteacherHead_teacherConcern"
                        android:layout_marginRight="10dp"
                        android:text="已关注"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textColor="#8888"
                        android:background="@drawable/shape3"

                        android:layout_width="60dp"
                        android:layout_height="30dp" />

                    <View
                        android:layout_alignParentBottom="true"
                        android:background="#8888"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@+id/again_NameTeacherHead1"
                    android:id="@+id/again_NameTeacherHead2"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <LinearLayout
                        android:id="@+id/aaa"
                        android:weightSum="6"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="69dp">
                        <RelativeLayout
                            android:id="@+id/course"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/again_NameteacherHead_teacherCourseNum"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_marginBottom="2dp"
                                android:gravity="bottom|center_horizontal"
                                android:textColor="#42e1e4"
                                android:textSize="15sp" />
                            <TextView
                                android:layout_marginTop="2dp"
                                android:gravity="top|center_horizontal"
                                android:layout_alignParentBottom="true"
                                android:text="课程"
                                android:layout_width="match_parent"
                                android:layout_height="25dp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/teather_work"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/again_NameteacherHead_teacherWorkNum"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_marginBottom="2dp"
                                android:gravity="bottom|center_horizontal"
                                android:textColor="#42e1e4"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_marginTop="2dp"
                                android:gravity="top|center_horizontal"
                                android:layout_alignParentBottom="true"
                                android:text="作业"
                                android:layout_width="match_parent"
                                android:layout_height="25dp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/teather_fudao"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/again_NameteacherHead_teacherCoachNum"
                                android:gravity="bottom|center_horizontal"
                                android:textSize="15sp"
                                android:layout_marginBottom="2dp"
                                android:textColor="#42e1e4"
                                android:layout_width="match_parent"
                                android:layout_height="35dp" />
                            <TextView
                                android:layout_marginTop="2dp"
                                android:layout_alignParentBottom="true"
                                android:gravity="top|center_horizontal"
                                android:text="辅导"
                                android:layout_width="match_parent"
                                android:layout_height="25dp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/tianzi"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/again_NameteacherHead_teacherInvitationNum"
                                android:gravity="bottom|center_horizontal"
                                android:textSize="15sp"
                                android:layout_marginBottom="2dp"
                                android:textColor="#42e1e4"
                                android:layout_width="match_parent"
                                android:layout_height="35dp" />
                            <TextView
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="2dp"
                                android:gravity="top|center_horizontal"
                                android:text="帖子"
                                android:layout_width="match_parent"
                                android:layout_height="25dp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/guanzhu"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/again_NameteacherHead_teacherConcernNum1"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_marginBottom="2dp"
                                android:gravity="bottom|center_horizontal"
                                android:textColor="#42e1e4"
                                android:textSize="15sp" />
                            <TextView
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="2dp"
                                android:gravity="top|center_horizontal"
                                android:text="关注"
                                android:layout_width="match_parent"
                                android:layout_height="25dp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/fengsi"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/again_NameteacherHead_teacherFSNum"
                                android:gravity="bottom|center_horizontal"
                                android:textSize="15sp"
                                android:layout_marginBottom="2dp"
                                android:textColor="#42e1e4"
                                android:layout_width="match_parent"
                                android:layout_height="35dp" />
                            <TextView
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="2dp"
                                android:gravity="top|center_horizontal"
                                android:text="粉丝"
                                android:layout_width="match_parent"
                                android:layout_height="25dp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <View
                        android:layout_below="@+id/aaa"
                        android:background="#8888"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:layout_below="@+id/again_Rela"
                android:textColor="#8888"
                android:id="@+id/again_NameTeacherContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/again_back"
            android:src="@mipmap/detail_back"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/again_share"
            android:src="@mipmap/detail_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/fudao"
            android:background="#5599c1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="40dp">
            <RadioButton
                android:button="@null"
                android:drawableLeft="@mipmap/detail_coach_img"
                android:text="请TA辅导"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
