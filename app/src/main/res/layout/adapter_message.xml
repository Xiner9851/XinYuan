<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_height="wrap_content">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="78dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/message_listitem_typeimg"
                    android:layout_width="38dp"
                    android:src="@mipmap/message_attention"
                    android:layout_height="38dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="12dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/message_listitem_title"
                            android:layout_width="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/message_listitem_flag"
                            android:layout_width="wrap_content"
                            android:text="官方"
                            android:textColor="#ffffff"
                            android:layout_marginLeft="5dp"
                            android:paddingLeft="5dp"
                            android:visibility="gone"
                            android:paddingRight="5dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:textSize="14sp"
                            android:background="@drawable/button_blue_bg_active"
                            android:layout_height="wrap_content" />


                        <ImageView
                            android:id="@+id/message_listitem_newimg"
                            android:layout_width="8dp"
                            android:layout_marginLeft="6dp"
                            android:visibility="invisible"
                            android:src="@mipmap/new_message"
                            android:layout_height="8dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/message_listitem_content"
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/gray"
                        android:singleLine="true"
                        android:layout_marginTop="8dp"
                        android:ellipsize="end"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="12dp"
                android:layout_height="1dp" />


            <TextView
                android:id="@+id/message_listitem_time"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_marginTop="22dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>




</LinearLayout>
