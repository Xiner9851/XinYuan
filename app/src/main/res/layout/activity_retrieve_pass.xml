<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.xinyuan.view.me.RetrievePassActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="26dp"
        android:layout_height="44dp">

        <TextView
            android:id="@+id/retrievepass_cancle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />


        <TextView
            android:layout_width="wrap_content"
            android:text="找回密码"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:textColor="#2C272D"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:text="验证手机号，快速找回密码"
                android:textColor="#000000"
                android:layout_marginTop="42dp"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_marginTop="56dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="32dp"
                    android:textSize="16sp"
                    android:text="+86"
                    android:visibility="gone"
                    android:textColor="#000000"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="1px"
                    android:background="#e2dfdf"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    android:layout_height="16dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/retrievepass_aty_phone_et"
                        android:layout_width="match_parent"
                        android:maxLength="11"
                        android:hint="输入手机号"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/retrievepass_aty_phone_et_clear"
                        android:layout_width="22dp"
                        android:visibility="invisible"
                        android:src="@mipmap/u1169"
                        android:layout_alignParentRight="true"
                        android:layout_height="22dp" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="280dp"
                android:layout_marginTop="20dp"
                android:layout_height="1dp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#ffffff"
                >


                <EditText
                    android:id="@+id/retrievepass_aty_getcode_et"
                    android:layout_width="wrap_content"
                    android:minWidth="90dp"
                    android:maxLength="6"
                    android:hint="输入验证码"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/retrievepass_aty_getcode_reset"
                    android:layout_width="105dp"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="#5491FF"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/retrievepass_aty_getcode_reset_clear"
                    android:layout_toLeftOf="@id/retrievepass_aty_getcode_reset"
                    android:layout_width="22dp"
                    android:visibility="invisible"
                    android:src="@mipmap/u1169"
                    android:layout_marginRight="3dp"
                    android:layout_height="22dp" />

            </RelativeLayout>

            <TextView
                android:layout_width="280dp"
                android:layout_marginTop="20dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/retrievepass_aty_loginbtn"
                android:layout_width="280dp"
                android:text="下一步"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:layout_marginTop="68dp"
                android:background="#493acf"
                android:layout_height="48dp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
