<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.xinyuan.view.work.WorkTiJiaoActivity">
    <RelativeLayout
        android:layout_gravity="center_vertical|center"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/zhaoteather_work_back"
            android:src="@mipmap/register_return"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:textSize="30dp"
            android:textColor="#54dec4"
            android:layout_centerInParent="true"
            android:text="直播课程"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tijiao_work_name" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/empty_content"
            android:src="@mipmap/empty_content"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginBottom="20dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/empty_content"
            android:text="暂无内容"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
