<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="11dp">
<ImageView
    android:id="@+id/zhao_fensi_img"
    android:src="@mipmap/user_head_portrait"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <TextView

        android:textSize="20dp"
        android:id="@+id/zhao_fensi_name"
        android:layout_marginLeft="18dp"
        android:text="你好"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_alignBaseline="@+id/zhao_fensi_guanzhu"
        android:layout_alignBottom="@+id/zhao_fensi_guanzhu"
        android:layout_toRightOf="@+id/zhao_fensi_img"
        android:layout_toEndOf="@+id/zhao_fensi_img" />
    <Button
        android:background="#3dafa0"
        android:textColor="#fff"
        android:layout_alignParentRight="true"
        android:id="@+id/zhao_fensi_guanzhu"
        android:text="关注"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>