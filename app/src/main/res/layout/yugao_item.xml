<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/yugao_biaoqian"
        android:text="表演"
        android:gravity="center"
        android:textColor="#fff"
        android:background="#76e26f"
        android:layout_marginBottom="-60dp"
        android:layout_width="60dp"
        android:layout_height="30dp" />
    <ImageView
        android:id="@+id/yugao_img"
        android:src="@mipmap/ic_launcher"
        android:layout_width="match_parent"
        android:layout_height="255dp" />
    <LinearLayout
        android:background="#8888"
        android:layout_marginTop="-30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">
        <TextView
            android:text="开课时间:"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/yudao_startdata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">
        <TextView
            android:text="地址:"
            android:textSize="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="22dp"
            android:id="@+id/yudao_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout


        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/yiyuyue"
            android:text="已预约:"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/yiyuyue"
            android:id="@+id/yudao_geshu"
            android:text="3/20"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView

            android:text="$"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/yugao_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="15000"
            android:textColor="#efd910"
            android:textSize="30dp"
            android:id="@+id/yugao_price"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>



</LinearLayout>