<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:id="@+id/recharge_center_aty_group"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/recharge_center_aty_bottom"
        android:layout_width="wrap_content"
        android:text="温馨提示：请在网络状态良好的环境下充值。"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:layout_marginBottom="12dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_above="@id/recharge_center_aty_bottom"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="26dp"
            android:layout_height="44dp">

            <TextView
                android:id="@+id/recharge_center_aty_cancle"
                android:layout_width="wrap_content"
                android:drawableLeft="@mipmap/u1253"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:text="充值中心"
                android:textSize="18dp"
                android:textColor="#3564aa"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/recharge_center_aty_zhangdan"
                android:layout_width="wrap_content"
                android:text="账单"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:layout_height="match_parent" />


            <TextView
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="1dp" />
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:background="#b2afaf"
            android:layout_height="10dp" />

        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="48dp">


            <TextView
                android:layout_width="wrap_content"
                android:text="账号:"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/recharge_center_aty_zhanghao_tv"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#4169d8"
                android:layout_marginRight="12dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_alignParentBottom="true"
            android:layout_height="1dp" />


        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="48dp">


            <TextView
                android:layout_width="wrap_content"
                android:text="余额:"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/recharge_center_aty_yue_tv"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#2f53d3"
                android:layout_marginRight="12dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:background="#2e41af"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#c2c0c0"
            android:text="请选择充值金额"
            android:textSize="12sp"
            android:layout_marginLeft="12dp"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recharge_center_aty_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>


    </LinearLayout>

</RelativeLayout>